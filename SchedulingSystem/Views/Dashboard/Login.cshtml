@model SchedulingSystem.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Bootstrap Admin Theme</title>

    <link type="text/css" href="../CSS_Files/bootstrap.min.css" rel="stylesheet">

    <link type="text/css" href="../CSS_Files/metisMenu.min.css" rel="stylesheet">

    <link type="text/css" href="../CSS_Files/sb-admin-2.css" rel="stylesheet">

    <link type="text/css" href="../CSS_Files/font-awesome.min.css" rel="stylesheet">

</head>
<body>
    <!--Background Image/Formatting>-->
    <style>
        body {
            background: url(https://s18.postimg.org/4ludevph5/Untitled_1.jpg);
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
    <br style="line-height:100px" }
        background-size:100% 100%;

    <!--Container includes Email and Password Input-->
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                @Html.ActionLink("Login", "Index", "Dashboard", new { @class = "btn btn-lg btn-success btn-block" })
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../jQuery_Files/jquery.min.js"></script>

    <script src="../jQuery_Files/bootstrap.min.js"></script>

    <script src="../jQuery_Files/metisMenu.min.js"></script>

    <script src="../jQuery_Files/sb-admin-2.js"></script>
</body>
</html>
